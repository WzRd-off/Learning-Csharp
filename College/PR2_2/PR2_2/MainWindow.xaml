<Window x:Class="PR2_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Геометричний калькулятор" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <EventSetter Event="PreviewTextInput" Handler="TextBox_PreviewTextInput"/>
        </Style>
        
        <Style x:Key="UnitSelectorStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Margin" Value="5,5"/>
            <Setter Property="SelectedIndex" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="ItemsSource">
                <Setter.Value>
                    <x:Array Type="sys:String">
                        <sys:String>м</sys:String>
                        <sys:String>см</sys:String>
                        <sys:String>мм</sys:String>
                    </x:Array>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- ИНТЕРФЕЙСЫ ПОЛЕЙ ВВОДА (ПАНЕЛИ) -->
 
        <StackPanel x:Key="View_Tri_3Sides">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="a ="/>
                <TextBox x:Name="tb_tri_a"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="b ="/>
                <TextBox x:Name="tb_tri_b"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="c ="/>
                <TextBox x:Name="tb_tri_c"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Key="View_Tri_2SidesAngle">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="a ="/>
                <TextBox x:Name="tb_tri_sa"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="b ="/>
                <TextBox x:Name="tb_tri_sb"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="α ="/>
                <TextBox x:Name="tb_tri_angle"/>
                <TextBlock Text="°" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
        

        <StackPanel x:Key="View_Square_Side">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="a ="/>
                <TextBox x:Name="tb_sq_a"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel x:Key="View_Square_Diag">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="d ="/>
                <TextBox x:Name="tb_sq_d"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
        </StackPanel>


        <StackPanel x:Key="View_Parallelogram_2SidesAngle">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="a ="/>
                <TextBox x:Name="tb_par_a"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="b ="/>
                <TextBox x:Name="tb_par_b"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="α ="/>
                <TextBox x:Name="tb_par_angle"/>
                <TextBlock Text="°" Margin="5,0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Key="View_Parallelogram_WidthHeigth">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="b ="/>
                <TextBox x:Name="tb_par_w_wh"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="h ="/>
                <TextBox x:Name="tb_par_h_wh"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Key="View_Parallelogram_2DiagsAngle">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="d1 ="/>
                <TextBox x:Name="tb_par_d1"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="d2 ="/>
                <TextBox x:Name="tb_par_d2"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="α ="/>
                <TextBox x:Name="tb_par_d_angle"/>
                <TextBlock Text="°" Margin="5,0"/>
            </StackPanel>
        </StackPanel>

        
        <StackPanel x:Key="View_Rhomb_2SidesAngle">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="a ="/>
                <TextBox x:Name="tb_rhomb_a"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="α ="/>
                <TextBox x:Name="tb_rhomb_angle"/>
                <TextBlock Text="°" Margin="5,0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Key="View_Rhomb_WidthHeigth">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="b ="/>
                <TextBox x:Name="tb_rhomb_w_wh"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="h ="/>
                <TextBox x:Name="tb_rhomb_h_wh"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Key="View_Rhomb_2Diags">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="d1 ="/>
                <TextBox x:Name="tb_rhomb_d1"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="d2 ="/>
                <TextBox x:Name="tb_rhomb_d2"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
        </StackPanel>

        
        <StackPanel x:Key="View_Trapeze_BasisHeigth">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="a ="/>
                <TextBox x:Name="tb_trap_a"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="b ="/>
                <TextBox x:Name="tb_trap_b"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="h ="/>
                <TextBox x:Name="tb_trap_h"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel> 
        </StackPanel>

        <StackPanel x:Key="View_Trapeze_MedlineHeigth">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="m ="/>
                <TextBox x:Name="tb_trap_m"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="h ="/>
                <TextBox x:Name="tb_trap_h_m"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Key="View_Trapeze_2DiagAngle">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="d1 ="/>
                <TextBox x:Name="tb_trap_d1"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="d2 ="/>
                <TextBox x:Name="tb_trap_d2"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Text="α ="/>
                <TextBox x:Name="tb_trap_angle"/>
                <TextBlock Text="°" Margin="5,0"/>
            </StackPanel>
        </StackPanel>

        
        <StackPanel x:Key="View_Circle_Radius">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="r ="/>
                <TextBox x:Name="tb_circle_r"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Key="View_Circle_Diameter">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="d ="/>
                <TextBox x:Name="tb_circle_d"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Key="View_Circle_length">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="L ="/>
                <TextBox x:Name="tb_circle_l"/>
                <ComboBox Style="{StaticResource UnitSelectorStyle}"/>
            </StackPanel>
        </StackPanel>

            <!-- СПИСКИ ВАРИАНТОВ ДЛЯ COMBOBOX -->

        <x:Array x:Key="ComboItems_Triangle" Type="ComboBoxItem">
            <ComboBoxItem Content="Три сторони" Tag="{StaticResource View_Tri_3Sides}" IsSelected="True"/>
            <ComboBoxItem Content="Дві сторони та кут" Tag="{StaticResource View_Tri_2SidesAngle}"/>
            <ComboBoxItem Content="Сторона та висота" Tag="{StaticResource View_Square_Side}"/>
        </x:Array>


        <x:Array x:Key="ComboItems_Square" Type="ComboBoxItem">
            <ComboBoxItem Content="Сторона квадрата" Tag="{StaticResource View_Square_Side}" IsSelected="True"/>
            <ComboBoxItem Content="Діагональ квадрата" Tag="{StaticResource View_Square_Diag}"/>
        </x:Array>

        <x:Array x:Key="ComboItems_Parallelogram" Type="ComboBoxItem">
            <ComboBoxItem Content="Сторони та кут між ними" Tag="{StaticResource View_Parallelogram_2SidesAngle}" IsSelected="True"/>
            <ComboBoxItem Content="Сторона та висота" Tag="{StaticResource View_Parallelogram_WidthHeigth}"/>
            <ComboBoxItem Content="Діагоналі та кут між ними" Tag="{StaticResource View_Parallelogram_2DiagsAngle}"/>
        </x:Array>

        <x:Array x:Key="ComboItems_Rhomb" Type="ComboBoxItem">
            <ComboBoxItem Content="Сторона та кут" Tag="{StaticResource View_Rhomb_2SidesAngle}" IsSelected="True"/>
            <ComboBoxItem Content="Сторона та висота" Tag="{StaticResource View_Rhomb_WidthHeigth}"/>
            <ComboBoxItem Content="Діагоналі" Tag="{StaticResource View_Rhomb_2Diags}"/>
        </x:Array>


        <x:Array x:Key="ComboItems_Trapeze" Type="ComboBoxItem">
            <ComboBoxItem Content="Основи та висота" Tag="{StaticResource View_Trapeze_BasisHeigth}" IsSelected="True"/>
            <ComboBoxItem Content="Середня лінія та висота" Tag="{StaticResource View_Trapeze_MedlineHeigth}"/>
            <ComboBoxItem Content="Діагоналі та кут між ними" Tag="{StaticResource View_Trapeze_2DiagAngle}"/>
        </x:Array>


        <x:Array x:Key="ComboItems_Circle" Type="ComboBoxItem">
            <ComboBoxItem Content="Радіус" Tag="{StaticResource View_Circle_Radius}" IsSelected="True"/>
            <ComboBoxItem Content="Діаметр" Tag="{StaticResource View_Circle_Diameter}"/>
            <ComboBoxItem Content="Довжина кола" Tag="{StaticResource View_Circle_length}"/>
        </x:Array>

    </Window.Resources>

    <Grid>
        <DockPanel LastChildFill="True">


            <Border DockPanel.Dock="Bottom" BorderBrush="Black" Padding="10" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Площа фігури: "/>
                    <TextBlock x:Name="tbAreaResult" Text="0" Margin="5,0"/>
                    <TextBlock Text="кв. од."/>
                </StackPanel>
            </Border>


            <Border DockPanel.Dock="Left" Width="200" Background="White" BorderBrush="#CCC" BorderThickness="0,0,1,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="Геометрична фігура" Margin="0,0,0,10"/>


                    <ListBox x:Name="lbShapes" SelectedIndex="0" BorderThickness="1" BorderBrush="#DDD" SelectionChanged="setDefaultStateCb">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="FontSize" Value="14"/>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBoxItem Content="Трикутник" Tag="{StaticResource ComboItems_Triangle}"/>
                        <ListBoxItem Content="Квадрат" Tag="{StaticResource ComboItems_Square}"/>
                        <ListBoxItem Content="Паралелограм" Tag="{StaticResource ComboItems_Parallelogram}"/>
                        <ListBoxItem Content="Ромб" Tag="{StaticResource ComboItems_Rhomb}"/>
                        <ListBoxItem Content="Трапеція" Tag="{StaticResource ComboItems_Trapeze}"/>
                        <ListBoxItem Content="Коло" Tag="{StaticResource ComboItems_Circle}"/>
                    </ListBox>

                    <Button x:Name="btnClearInputs" Content="Очистити поля" Margin="0,20,0,5" Click="btnClearInputs_Click" />
                    <Button x:Name="btnFindArea" Content="Знайти площу" Click="btnFindArea_Click"/>
                </StackPanel>
            </Border>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Виберіть наявні дані:" Margin="0,0,10,0" VerticalAlignment="Center"/>


                    <ComboBox x:Name="cbParamsSelector" 
                              Width="200"
                              ItemsSource="{Binding SelectedItem.Tag, ElementName=lbShapes}"
                              SelectedIndex="0"                    
                              />
                </StackPanel>

                <GroupBox Grid.Row="1" Header="Введіть дані" BorderBrush="#CCC" Background="White">

                    <ContentControl x:Name="InputArea"
                                    Content="{Binding SelectedItem.Tag, ElementName=cbParamsSelector}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                </GroupBox>
            </Grid>

        </DockPanel>
    </Grid>
</Window>