<Window x:Class="PR3_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR3_2"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="800" Width="700">
    <Window.Resources>

        <Grid x:Key="gp3x3">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
        </Grid>
        
        <Grid x:Key="gp5x5">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
        </Grid>
        
        <Grid x:Key="gp8x8">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
        </Grid>

    </Window.Resources>
    <Grid>
		<StackPanel Margin="20" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button x:Name="btnSelectPic" Content="Обери зображення"></Button>
                <TextBox Text="Оберіть розмір:" Margin="30, 0, 5, 0" BorderThickness="0" VerticalAlignment="Center"></TextBox>
                <ComboBox x:Name="cbSize" Width="100" SelectionChanged="RefreshGP" SelectedIndex="0">
                    <ComboBoxItem Content="3x3" Tag="{StaticResource gp3x3}"  IsSelected="True"/>
                    <ComboBoxItem Content="5x5" Tag="{StaticResource gp5x5}" />
                    <ComboBoxItem Content="8x8" Tag="{StaticResource gp8x8}" />
                </ComboBox>
            </StackPanel>
            <ContentControl x:Name="cpPuzzle"
                            Content="{Binding SelectedItem.Tag, ElementName=cbSize}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0, 20, 0, 0"
                            />
        </StackPanel>
    </Grid>
</Window>
