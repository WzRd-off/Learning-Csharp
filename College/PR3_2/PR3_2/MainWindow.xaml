<Window x:Class="PR3_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR3_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="700">
    <Grid>
		<StackPanel Margin="20" >
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button x:Name="btnSelectPic" Content="Обери зображення"></Button>
				<TextBox Text="Оберіть розмір:"></TextBox>
				<ComboBox x:Name="cbSize" Width="100" SelectionChanged="RefreshGP">
					<ComboBoxItem Content="3x3" IsSelected="True"/>
					<ComboBoxItem Content="5x5"/>
					<ComboBoxItem Content="8x8"/>
				</ComboBox>
			</StackPanel>
			<Grid x:Name="gpPuzzle">
				
			</Grid>
		</StackPanel>
    </Grid>
</Window>
